//This Program contains The Hours Converting to minutes.Taking The input Of Hours From user
import java.util.Scanner;
class Hour_Conversion_Minutes
{
  public static void main(String[]args)
  {
    Scanner sc=new Scanner (System.in);
    System.out.println("Enter a Hours Value to Conversion in Minutes :-");
    int hours=sc.nextInt;
    int Minutes=hours*60;
    System.out.println("The Hours- "+hours+" Conversion Of Minutes is " +Minutes);
  }
}
______________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________

//This Program contains The Hours Converting to Seconds.Taking The input Of Hours From user
import java.util.Scanner;
class Hour_Conversion_Seconds
{
  public static void main(String[]args)
  {
    Scanner sc=new Scanner (System.in);
    System.out.println("Enter a Hours Value to Conversion in Seconds:-");
    int hour=sc.nextInt;
    int Seconds=hours*60*60;
    System.out.println("The Hours- "+hour+" Conversion Of Seconds is " +Seconds);
  }
}
