//This Program contains The Seconds Converting to Hours.Taking The input Of Seconds From user
import java.util.Scanner;
class Minutes_Conversion_Hour
{
  public static void main(String[]args)
  {
    Scanner sc=new Scanner (System.in);
    System.out.println("Enter a Minutes Value to Conversion in Hours :-");
    int seconds1=sc.nextInt();
    int Hours0=seconds1/3600;
    System.out.println("The seconds- "+seconds1+" Conversion Of Hours is " +Hours0);
  }
}
