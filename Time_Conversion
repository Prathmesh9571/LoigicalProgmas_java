//This Program contains The Minutes Converting to Hours.Taking The input Of Minutes From user
import java.util.Scanner;
class Minutes_Conversion_Hour
{
  public static void main(String[]args)
  {
    Scanner sc=new Scanner (System.in);
    System.out.println("Enter a Minutes Value to Conversion in Hours :-");
    int Minutes=sc.nextInt();
    int Hours0=Minutes/60;
    System.out.println("The Minutes- "+Minutes+" Conversion Of Hours is " +Hours0);
  }
}
