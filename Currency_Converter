//These java program is specifically designed to Convert the currency using methods.
import java.util.Scanner;
class ConvertCurrency 
{
	public static void main(String[] args) 
	{
    //Creating the object of Scanner.
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter thr Currency in ruppe");
		double rupee=sc.nextDouble();
		rupeeToDollar(rupee);
	}
	public static void rupeeToDollar(double rupee)
	{
		double dollar=rupee*0.012;
		System.out.println("The conversion of rupee in to dollar is :"+dollar);
		dollarToDihrams(dollar);
	}
	public static void dollarToDihrams(double dollar)
	{
		double dihram=dollar*3.67;
		System.out.println("The conversion of dollar in to dihrams is :"+dihram);
		dihramsToEuro(dihram);
	}
	public static void dihramsToEuro(double dihram)
	{
		double euro=dihram*0.25;
		System.out.println("The conversion of Dihrams to Euro is :"+euro);
		euroToUrbekistani(euro);
	}
	public static void euroToUrbekistani(double euro)
	{
		double urbekistani=euro*12195.4;
		System.out.println("The Conversion of Euro to Urbekistani is:"+urbekistani);
		urbekistaniToHongkong(urbekistani);
	}
	public  static void urbekistaniToHongkong(double urbekistani)
	{
		double hongkong=urbekistani*0.069;
		System.out.println("The Conversion of Urbekistani to Hongkong is:"+hongkong);
	}
}
